<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightImageViewAvatar"
            android:src="@drawable/boy" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote1" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote2" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote3" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote4" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote5" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote6" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopQuote"
            android:layout_marginBottom="@dimen/marginBottomQuote"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            android:text="@string/quote7" />

        <Button
            android:id="@+id/buttonKosmos"

            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonKosmos" />

    </LinearLayout>
</FrameLayout>